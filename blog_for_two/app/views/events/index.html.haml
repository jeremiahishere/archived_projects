%h1 Listing Events

= link_to 'New Event', new_event_path

%table
  %tr
    %th Name
    %th Time
    %th
  - @events.each do |event|
    %tr
      %td= event.name
      %td
        = event.start_at
        - if event.end_at
          to
          = event.end_at
      %td
        = link_to 'Show', event_path(event)
        = link_to 'Edit', edit_event_path(event)
        = link_to 'Destroy', event, :confirm => 'Are you sure?', :method => :delete
