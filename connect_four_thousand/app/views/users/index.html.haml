%h1 Listing users 

= paginate @users
%table
  %tr
    %th Name
    %th Roles
    %th
    %th

  - @users.each do |user|
    %tr
      %td= user.name
      %td
        - if user.roles.length > 0
          %ul
            - user.roles.each do |role|
              %li= role.name
          
      %td= link_to 'Show', user_path(user)
      %td= link_to 'Edit Roles', edit_user_path(user)
      %td= button_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete
